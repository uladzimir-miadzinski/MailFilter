    <Frame name="MailFilterFrame" parent="UIParent" movable="true">
        <Size x="300" y="300"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture setAllPoints="true">
                    <color r="0" g="1" b="0" a="0.5"/>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button name="MyAddon_Button">
                <Anchors>
                    <Anchor point="CENTER"/>
                </Anchors>
            </Button>
        </Frames>

        <Scripts>
            <OnLoad>
			    onLoad();
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>