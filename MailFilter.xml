<Ui xmlns="http://www.blizzard.com/wow/ui/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Frame name="MailFilterFrame" parent="UIParent" movable="true" enableMouse="true">
        <Size x="640" y="480"/>
        
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>


        <Frames>
            <Button name="CloseButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="64" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-7" y="-7"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent():Hide();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>

        <Scripts>
            <OnLoad>
			    onLoad();
            </OnLoad>
            <OnDragStart>
                self:StartMoving();
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>